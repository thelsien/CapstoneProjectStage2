<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
    <Preference
        android:key="change_time_iterval"
        android:title="Time interval"/>
    <ListPreference
        android:defaultValue="@string/default_currency_value"
        android:entries="@array/currencies_names"
        android:entryValues="@array/currencies"
        android:key="change_currency"
        android:title="Change currency"/>
    <Preference
        android:key="import_data"
        android:title="Import data"/>
    <Preference
        android:key="export_data"
        android:title="Export data"/>
</PreferenceScreen>